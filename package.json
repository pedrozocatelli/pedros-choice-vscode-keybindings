{
  "name": "pedros-choice-vscode-keybindings",
  "displayName": "Pedro's Choice - Keymap",
  "description": "Pedro's choice of the best keybindings for development with VS Code",
  "version": "1.0.0",
  "publisher": "pedroschoice",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedrozocatelli/pedros-choice-vscode-keybindings"
  },
  "bugs": {
    "url": "https://github.com/pedrozocatelli/pedros-choice-vscode-keybindings/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.32.0"
  },
  "galleryBanner": {
    "color": "#ff7300",
    "theme": "dark"
  },
  "categories": [
    "Keymaps"
  ],
  "keywords": [
    "keymap"
  ],
  "preview": false,
  "icon": "images/pedroschoice.png",
  "contributes": {
    "keybindings": [
      {
        "mac": "cmd+shift+w",
        "win": "ctrl+shift+w",
        "linux": "ctrl+shift+w",
        "key": "ctrl+shift+w",
        "command": "workbench.action.closeEditorsInGroup",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+shift+c",
        "win": "ctrl+shift+c",
        "linux": "ctrl+shift+c",
        "key": "ctrl+shift+c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "ctrl+down",
        "win": "ctrl+down",
        "linux": "ctrl+down",
        "key": "ctrl+down",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "ctrl+up",
        "win": "ctrl+up",
        "linux": "ctrl+up",
        "key": "ctrl+up",
        "command": "editor.action.copyLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+shift+e",
        "win": "ctrl+shift+e",
        "linux": "ctrl+shift+e",
        "key": "ctrl+shift+e",
        "command": "editor.action.cursorEndSelect",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+shift+a",
        "win": "ctrl+shift+a",
        "linux": "ctrl+shift+a",
        "key": "ctrl+shift+a",
        "command": "editor.action.cursorHomeSelect",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+e",
        "win": "ctrl+e",
        "linux": "ctrl+e",
        "key": "ctrl+e",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+shift+1",
        "win": "ctrl+shift+1",
        "linux": "ctrl+shift+1",
        "key": "ctrl+shift+1",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "workbench.explorer.openEditorsView.active"
      },
      {
        "mac": "cmd+numpad_subtract",
        "win": "ctrl+numpad_subtract",
        "linux": "ctrl+numpad_subtract",
        "key": "ctrl+numpad_subtract",
        "command": "editor.fold",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+shift+numpad_subtract",
        "win": "ctrl+shift+numpad_subtract",
        "linux": "ctrl+shift+numpad_subtract",
        "key": "ctrl+shift+numpad_subtract",
        "command": "editor.foldAll",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+shift+up",
        "win": "ctrl+shift+up",
        "linux": "ctrl+shift+up",
        "key": "ctrl+shift+up",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+shift+down",
        "win": "ctrl+shift+down",
        "linux": "ctrl+shift+down",
        "key": "ctrl+shift+down",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+j",
        "win": "alt+j",
        "linux": "alt+j",
        "key": "alt+j",
        "command": "editor.action.joinLines",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+m",
        "win": "ctrl+m",
        "linux": "ctrl+m",
        "key": "ctrl+m",
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+down",
        "win": "alt+down",
        "linux": "alt+down",
        "key": "alt+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+up",
        "win": "alt+up",
        "linux": "alt+up",
        "key": "alt+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+l",
        "win": "alt+l",
        "linux": "alt+l",
        "key": "alt+l",
        "command": "editor.action.transformToLowercase",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+u",
        "win": "alt+u",
        "linux": "alt+u",
        "key": "alt+u",
        "command": "editor.action.transformToUppercase",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "mac": "cmd+numpad_add",
        "win": "ctrl+numpad_add",
        "linux": "ctrl+numpad_add",
        "key": "ctrl+numpad_add",
        "command": "editor.unfold",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+shift+numpad_add",
        "win": "ctrl+shift+numpad_add",
        "linux": "ctrl+shift+numpad_add",
        "key": "ctrl+shift+numpad_add",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus"
      },
      {
        "mac": "cmd+1",
        "win": "ctrl+1",
        "linux": "ctrl+1",
        "key": "ctrl+1",
        "command": "workbench.view.explorer",
        "when": "editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "vsce": "^1.81.1"
  }
}
